{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["cdg1"],
  "functions": {
    "api/**": {
      "memory": 1024
    }
  },
  "env": {
    "NEXTAUTH_SECRET": {
      "description": "NextAuth secret for secure sessions",
      "required": true,
      "default": ""
    },
    "NEXTAUTH_URL": {
      "description": "NextAuth URL for production",
      "required": false
    }
  }
}
